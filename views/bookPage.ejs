<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="../css/main.min.css">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
</head>
<style>
  .star-rating .fa-star {
    cursor: pointer;
    color: #ddd;
  }

  .star-rating .fa-star.checked {
    color: #ffc107;
  }

</style>

<body>

  <div class="container-fluid py-5">
    <div class="p-5 mb-4 bg-body-tertiary rounded-3">
      <div class="row container-fluid py-5 d-flex align-items-center">
        <div class="col-10 col-sm-8 col-lg-3">
          <img src="<%= locals.bookCover %>" alt="Book cover">
        </div>
        <div class="col-lg-9">
          <form action="/bookAdded" method="post">
            <div class="form-group">
              <h5 class="display-5 fw-bold mb-0"> <%= locals.bookTitle %> </h5>
              <p class="mb-0 opacity-75 mb-3"> By <%= locals.bookAuthor %></p>
              <label for="review"> Review: </label> <br />
              <textarea name="reviewText" rows="5" class="rounded-3 mb-3" id="review"></textarea>
            </div>

            <select class="form-select" aria-label="Default select example">
              <option style="font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;" selected>Open this select menu</option>
              <option style="font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;"  value="1">One</option>
              <option style="font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;"  value="2">Two</option>
              <option style="font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;"  value="3">Three</option>
            </select>

            <p>Rating: </p>

            <div class="star-rating">
              <i class="fas fa-star" data-value="1"></i>
              <i class="fas fa-star" data-value="2"></i>
              <i class="fas fa-star" data-value="3"></i>
              <i class="fas fa-star" data-value="4"></i>
              <i class="fas fa-star" data-value="5"></i>
            </div>

            <p class="ratingValue"> Rating: 0</p>
            <button class="btn btn-primary btn-lg" type="submit">Track book</button>
          </form>
        </div>

      </div>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>

    <script>
      $(document).ready(function() {
        $(".fa-star").click(
          function() {
            const star = $(this).data().value;
            starFunction(star);
          }
        );

        function starFunction(star) {
          $('.fa-star').each(function(starElement) {
            $(this).toggleClass('checked', starElement < star);
          });

          $('.ratingValue').text(`Rating: ${star}`);
        }
      })
    </script>
</body>

</html>